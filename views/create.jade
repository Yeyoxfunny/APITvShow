extends layout
block content
    header 
        .container
            h1.text-center Ingresar nueva seria de televisión
    section.container
        #template--tvshow__edit
            .row
                .col-md-12.edit__tvshow
                    form.form-horizontal.short-top-space(method="POST",action="/edit")
                      .row
                        .col-md-7
                            .form-group
                                label.col-md-2.control-label(for="title") Título
                                .col-md-10
                                    input.form-control(type="text", placeholder="Título",id="title",name="title")
                            .form-group
                                label.col-md-2.control-label(for="poster") Imagen
                                .col-md-10
                                    input.form-control(type="text", placeholder="URL Imagen",id="poster",name="poster")
                            .form-group
                                label.col-md-2.control-label(for="year") Año
                                .col-md-10
                                    input.form-control(type="number", placeholder="Año",id="year",name="year")
                            .form-group
                                label.col-md-2.control-label(for="country") País
                                .col-md-10
                                    input.form-control(type="text", placeholder="País",id="country",name="country")
                            .form-group
                                label.col-md-2.control-label(for="seasons") Temporadas
                                .col-md-10
                                    input.form-control(type="number", placeholder="Temporadas",id="seasons",name="seasons")
                            .form-group
                                label.col-md-2.control-label(for="gender") Género
                                .col-md-10
                                    select.form-control(name="gender",id="gender")
                                        option(value="Drama") Drama
                                        option(value="Fantasy") Fantasy
                                        option(value="Sci-Fi") Sci-Fi
                                        option(value="Thriller") Thriller
                                        option(value="Comedy") Comedy
                        .col-md-4
                            img(id="imagen-poster" class="tvshow__img img-responsive",src="data:image/svg+xml;base64,")

                      .form-group.short-top-space
                          label.col-md-10(for="summary") Resumen
                          .col-md-10.col-md-offset-1
                              textarea.form-control(id="summary",name="summary",rows="10")
                              button.btn.btn-success.btn-block.short-top-space.short-bottom-space(type="submit") Enviar 
block script__final
  script(type='text/javascript').
    var $poster = $("#poster");
      $poster.on("change",function(){
        if($poster.val() === ""){
          $("#imagen-poster").attr("src","data:image/svg+xml;base64,");
        }else{
          $("#imagen-poster").attr("src",$poster.val());
        }
      });                
    
